{% if app.user %}
    {% set id = app.user.id %}
{% endif %}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/d02eba9fbf.js" crossorigin="anonymous"></script>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}"><i class="fa-solid fa-gear"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user',{id}) }}">Mon profil</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin') }}">Page admin</a>
                    </li>
                {% endif %}


                <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                </li>
            </ul>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn-primary btn btn-sm" href="{{ path('app_logout') }}">Se deconnecter</a>

            {% else %}
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-primary btn-sm">Incription</a>
                </div>
            {% endif %}
        </div>
    </div>
</nav>

<!-- side bar admin -->
<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
        <span class="fs-4">Sidebar</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="{{ path('app_admin') }}" class="nav-link text-dark {% if controller_name == 'AdminController' and controller_name is defined %}active text-white{% endif %}" aria-current="page">
                <i class="fa-solid fa-house bi me-2"></i>
                Accueil
            </a>
        </li>

        <li class="nav-item">
            <a href="{{ path('app_admin_user_list') }}" class="nav-link text-dark {% if controller_name == 'AdminUserController' and controller_name is defined %}active text-white{% endif %}">
                <i class="fa-solid fa-user bi me-2"></i>
                Utilisateurs
            </a>
        </li>
    </ul>
    <hr>

</div>
{% block body %}{% endblock %}
</body>
</html>
